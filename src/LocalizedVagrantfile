require 'json'
require 'yaml'

VAGRANTFILE_API_VERSION ||= "2"
confDir = $confDir ||= File.expand_path("vendor/laravel/vagrant", File.dirname(__FILE__))

vagrantYamlPath = "Homestead.yaml"
vagrantJsonPath = "Homestead.json"
afterScriptPath = "after.sh"
aliasesPath = "aliases"

require File.expand_path(confDir + '/scripts/vagrant.rb')

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
    if File.exists? aliasesPath then
        config.vm.provision "file", source: aliasesPath, destination: "~/.bash_aliases"
    end

    if File.exists? vagrantYamlPath then
        vagrant.configure(config, YAML::load(File.read(vagrantYamlPath)))
    elsif File.exists? vagrantJsonPath then
        vagrant.configure(config, JSON.parse(File.read(vagrantJsonPath)))
    end

    if File.exists? afterScriptPath then
        config.vm.provision "shell", path: afterScriptPath
    end
end
